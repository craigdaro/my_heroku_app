<!doctype html>
<html lang="en-US">
  <head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>

  
    <header>
      <h1>Todo Tracker</h1>
      <div class="actions">
        <%= yield_content :header_links %>
      </div>
    </header>
  
    <main>
      <% if session[:success_list]%>
        <div class = "flash success">
        <p><%= session[:success_list]%></p>
            <% # Delete the value, so that it wont last forever 
                # => no delete, the value remains in the hash
                # =>  alternativ session.delete :success
                # =>  bc delete returns the value
            %>
            <% session[:success_list] = nil %>
          </div>
      <%end%>
      <% if session[:failed_list] %>
        <div class ="flash error">
        <p> <%= session.delete :failed_list%></p>
        </div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
